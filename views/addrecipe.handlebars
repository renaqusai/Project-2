<section class="banner-home">
    <!-- Banner section Start-->

    <!-- container Start-->
    <div class="container">
        <!--Row Start-->
        <div>
            <div class="side-logo">
                <a href="/"><img src="/assets/images/recipe.png" alt="" height="auto" width="300"></a>
            </div>

            <form id='add-recipe' action="/" method="POST">
                <p class='home-header'>Add your recipe into our cookbook and share it with your peers!</h3>
                <hr>
                <div class="form-group">
                    <label class='label' for="recipe-label">Recipe Name</label>
                    <input type="label" name="label" class="form-control" id="label" placeholder="Enter recipe name">
                </div>
                <div class="form-group">
                    <label class='label' for="ingredient-list">Ingredients</label>
                    <input type="label" class="form-control" name="ing1" placeholder="Enter ingredient">
                    <input type="label" class="form-control" name="ing2" placeholder="Enter ingredient">
                    <input type="label" class="form-control" name="ing3" placeholder="Enter ingredient">
                    <input type="label" class="form-control" name="ing4" placeholder="Enter ingredient">
                    <input type="label" class="form-control" name="ing5" placeholder="Enter ingredient">
                    <input type="label" class="form-control" name="ing6" placeholder="Enter ingredient">
                    <input type="label" class="form-control" name="ing7" placeholder="Enter ingredient">
                    <input type="label" class="form-control" name="ing8" placeholder="Enter ingredient">

                </div>
                <div class="form-group">
                    <label class='label' for="exampleInputPassword1">Prep Time</label>
                    <input class="form-control" name='totalTime' id="Insert total prep time in minutes" placeholder="Enter total time">
                </div>
                <div class="form-group">
                    <label class='label' for="exampleInputPassword1">Instructions</label>
                    <input class="form-control" name='instruction' id="Prep Instructions" placeholder="Insert Instructions"
                        rows='4'>
                </div>

                <div class="form-group">
                    <label class='label' for="exampleTextarea">Image link</label>
                    <textarea class="form-control" name='imageLink' id="calories" rows="1" placeholder="Insert link to the image"></textarea>
                </div>

                {{!-- Diet Labels --}}
                <div class="form-group">
                    <label class='label' for="diet-labels">Diet Labels</label>
                    <select multiple class="form-control" name='dietLabels' id="diet-labels">
                        <option value='None'>None</option>
                        <option value='Vegetarian'>Vegetarian</option>
                        <option value='Vegan'>Vegan</option>
                        <option value='Paleo'>Paleo</option>
                        <option value='High-Fiber'>High-Fiber</option>
                        <option value='High-Protein'>High-Protein</option>
                        <option value='Low-Carb'>Low-Carb</option>
                        <option value='Low-Fat'>Low-Fat</option>
                        <option value='Low-Sodium'>Low-Sodium</option>
                        <option value='Low-Sugar'>Low-Sugar</option>
                        <option value='Alcohol-Free'>Alcohol-Free</option>
                        <option value='Balanced'>Balanced</option>
                        <option value='Two AM Munchies'>Two AM munchies</option>
                    </select>
                </div>

                {{!-- Allergies --}}
                <div class="form-group">
                    <label class='label' for="exampleSelect1">Allergies</label>
                    <select multiple class="form-control" name='allergies' id="health-labels">
                        <option value='None'>None</option>
                        <option value='Gluten'>Gluten</option>
                        <option value='Dairy'>Dairy</option>
                        <option value='Eggs'>Eggs</option>
                        <option value='Soy'>Soy</option>
                        <option value='Wheat'>Wheat</option>
                        <option value='Fish'>Fish</option>
                        <option value='Shellfish'>Shellfish</option>
                        <option value='Tree Nuts'>Tree Nuts</option>
                        <option value='Peanuts'>Peanuts</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class='label' for="exampleTextarea">Calories</label>
                    <textarea class="form-control" name='calories' id="calories" rows="1"></textarea>
                </div>

                <button type="submit" class="btn btn-primary add-recipe">Submit</button>
            </form>
        </div>
        <!--Row Ended-->
    </div>
    <!-- container Ended-->
</section>

</div>