                        <option value=''>Low-Sodium</option>
                        <option value=''>Low-Sugar</option>
                        <option value=''>Alcohol-Free</option>
                        <option value=''>Balanced</option>
                        <option value=''>Two AM munchies</option>
                    </select>
                </div>

                {{!-- Allergies --}}
                <div class="form-group">
                    <label for="exampleSelect1">Allergies</label>
                    <select multiple class="form-control" name='allergies' id="health-labels">
                        <option value=''>None</option>
